    <link rel="stylesheet" href="../public/css/Dashboard.css">
</head>

<body>
<button style="float: right; margin-right: 12px;" class="btn btn-warning"><a href="/AddForm">Ajout</a></button>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">image</th>
                <th scope="col">stade</th>
                <th scope="col">description</th>
                <th scope="col">created_at</th>
                <th scope="col">updated_at</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for(i=0;i<data.length;i++){ %>
            <tr>
                <th scope="row"><%= data[i].id %></th>
                <td><img style="width: 500px; height: 500px; object-fit: contain;" src=<%=data[i].image_url %> alt=""></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].description %></td>
                <td><%= data[i].ceated_at %></td>
                <td><%= data[i].updated_at %></td>
                <td style="display: flex; gap: 9px;">
                    <a style="background-color: blue; padding: 5px 5px; text-align: center;" href="">
                        <svg style="width: 30px; height:30px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="white" className="size-6">
